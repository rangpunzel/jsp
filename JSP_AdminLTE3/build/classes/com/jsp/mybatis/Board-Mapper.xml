<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="Board-Mapper">

	<select id="selectBoardList" resultType="board">
		select
		*
		from board
	</select>
	
	<select id="selectBoardListCount" resultType="int">
		select COUNT(*)
		from board
	</select>
	
	<select id="selectBoardByBno" parameterType="int" resultType="board">
		select
		*
		from board
		where bno=#{bno}
	</select>
	
	<update id="insertBoard" parameterType="board">
	insert into board (bno,title,writer,content,regdate,updatedate) values
	(#{bno},#{title},#{writer},#{content},sysdate,sysdate)
	</update>
	
	<update id="updateBoard" parameterType="board">
	update board set 
	title=#{title},writer=#{writer},content=#{content},updatedate=sysdate
	where bno=#{bno}
	</update>
	
	<update id="deleteBoard" parameterType="str">
	delete from board
	where bno=#{bno}
	</update>
	

</mapper>